    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/request_failed_ll" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ImageView android:layout_width="@dimen/px_positive_325" android:layout_height="@dimen/px_positive_260" android:src="@mipmap/request_failed" android:scaleType="fitXY" />
        <TextView android:textSize="@dimen/px_positive_30" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/px_positive_39" android:text="@string/network_not_connect" />
    </LinearLayout>
</FrameLayout>